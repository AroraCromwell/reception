<style>
    html{zoom: 0.7;}
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #bbf4fb;
        border: 1px solid #dddddd;
    }

    @media print{thead{display:table-header-group; margin-bottom:2px;}}
    @page{margin-top:1cm;margin-left:1cm;margin-right:1cm;margin-bottom:1.5cm;}
</style>
<!--<span><b>Date :</b> {{data.todayDate}}</span>-->
<table id="datatable" width="100%">
    <thead style="margin-top: 150px;">
    <tr>
        <!--<th>StaffId</th>-->
        <!--<th>Name</th>-->
        <!--<th>Signed In</th>-->
        <!--<th>Status</th>-->
    </tr>
    </thead>

    <tbody style="margin-top: 150px;">
    {{#each data}}
        <tr>
            <td style="width: 75px;float: left;">{{staff_id}}</td>
            <td style="width: 200px;float: left;">{{first_name}} {{surname}}</td>
            <td style="width: 85px;float: left;">{{signin_time}}</td>
            <td style="width: 69px;float: left;"></td>
        </tr>
    {{/each}}

    </tbody>
</table>


<script src="/js/jquery-1.12.3.min.js" ></script>
<script>
    $(function() {
        $('#datatable').DataTable( {
            "order": [[ 2, "desc" ]],
            paging: false
        });
    });
</script>
