<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form role="form" class="form-horizontal" action="/tabletPost" method="post">
                <div class="form-group">
                    <label class="control-label col-sm-2" for="type">Name: </label>
                    <div class="col-sm-10">
                        <input type="text" name="tablet_name"><br>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2" for="location">Printer: </label>
                    <div class="col-sm-10">
                        <select name="printer" class="form-control" id="printer">
                            <option  value="">Select</option>
                            {{#each data.allPrinters}}
                                <option  value="{{name}}">{{name}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2" for="location">Location: </label>
                    <div class="col-sm-10">
                        <select name="location" class="form-control" id="location">
                            <option  value="">Select</option>
                            {{#each data.locations}}
                                <option  value="{{location_id}}_{{location_name}}">{{location_name}}</option>
                            {{/each}}
                            <!--<option>WDC</option>-->
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2" for="type">Departments: </label>
                    <div class="col-sm-10">
                        {{#each data.departments}}
                            <input type="checkbox" name="department[]" id="{{department_id}}" value="{{department_id}}_{{department}}" >    {{department}}<br>
                        {{/each}}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-3 col-sm-offset-2">
                        <input type="submit" class="sbm-btn btn btn-sm btn-primary" value="Add Tablet">
                    </div>
                    <div class="col-sm-7">
                        <label style="margin-top: 20px;"><input type="checkbox" name="another"  checked ><span style="margin-left:13px">Create Another</span></label>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="/js/jquery-1.12.3.min.js" ></script>
<script>
    $.urlParam = function(name){
        var results = new RegExp('[\?&]' + name + '=([^&#]*)').exec(window.location.href);
        if (results==null){
            return null;
        }
        else{
            return results[1] || 0;
        }
    };

    $('#location').val($.urlParam('location'));

</script>
